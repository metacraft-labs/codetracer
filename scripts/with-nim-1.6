#!/usr/bin/env bash
# Execute a command with Nim 1.6.x in PATH
# Usage: with-nim-1.6 <command> [args...]
#
# Example:
#   with-nim-1.6 nim --version
#   with-nim-1.6 cargo test test_nim_flow

set -e

if [ $# -eq 0 ]; then
	echo "Usage: with-nim-1.6 <command> [args...]"
	echo "Execute a command with Nim 1.6.x in PATH"
	exit 1
fi

NIM_PATH=$(nix build --no-link --print-out-paths '.#nim-1_6')/bin
export PATH="$NIM_PATH:$PATH"

exec "$@"
