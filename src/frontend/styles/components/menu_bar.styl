  .menu-node, .menu-search-result
    font-size: MENU_FONT_SIZE
    height: auto
    min-width: fit-content //"calc(%s + 2px)" % MENU_NODE_MIN_WIDTH
    display: flex
    padding-top: 2px
    padding-bottom: 2px
