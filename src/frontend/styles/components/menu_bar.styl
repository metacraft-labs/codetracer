      padding-left: 8px
      padding-right: 8px
      color: NAVIGATION_MENU_COLOR
      font-size: MENU_FONT_SIZE
      border-radius: 5px
      display: flex
      align-items: center
      font-weight: 400
      white-space: nowrap


    .menu-expand
      width: MENU_EXPAND_WIDTH
      float: left
      position: relative
      margin-left: 8px
      display: flex
      align-items: center

      &::after
