        height: 20px
        background-image: url("../../public/resources/menu/ct_logo_dark.svg")
        background-size: cover
        background-position: center
        display: inline-block
        position: relative
        cursor: pointer

    #menu-root-name
      height: 25px
      font-size: 15px
      font-family: Arial, Helvetica, sans-serif
      font-weight: bold
      max-width: 48ex;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      padding-right: 10px

