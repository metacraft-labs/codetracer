.low-level-full
  flex-basis: 100%

.editor-info
  display: flex
  height: fit-content
  margin-left: 0
  flex-direction: column

  .monaco-scrollable-element
    margin-left: 8px

  .editor-vertical-line
    position: absolute
    width: 3px
    height: calc(100% + 20px)
    top: -8px
    left: 57px
    background-color: TRACEPOINT_SPLITTER_COLOR
    z-index:2 !important

    &.splitter
      left 0
      width: 100%
      top: 100% !important
      height: 16px !important
      //z-index: 56 !important

      .editor-splitter-scratch
        position: absolute
        width: 20px
        height: 1px
        background-color: TRACEPOINT_BACKGROUND_COLOR
        z-index: 4
        left: calc(50% - 10px)

      &:hover
        cursor: row-resize

  .editor-textarea
    // flex-basis: 40%
    position: relative
    // height: 40%
    width: 100%
    background-color: TRACEPOINT_BACKGROUND_COLOR
    border-radius: 6px
    // border-right: 3px solid #5a595c

    .line-numbers
      margin-left: 0px !important
      padding-right: 8px !important
      background-color: TRACEPOINT_BACKGROUND_COLOR
      border-right: 3px solid LINE_NUMBERS_BORDER_COLOR
      text-align: right !important

    .active-line-number
      color: #c6c6c6 !important

    .view-lines
      background-color: TRACEPOINT_BACKGROUND_COLOR

      .view-line
        background-color: TRACEPOINT_BACKGROUND_COLOR

    .margin-view-overlays
      background-color: TRACEPOINT_BACKGROUND_COLOR

  .editor-textarea-empty-header
    // border-left: 3px solid #5a595c
    position: relative
    left:57px
    width: calc(100% - 57px)
    height: 8px
    background-color: TRACEPOINT_BACKGROUND_COLOR
    border-radius: 6px

  .editor-traces
    margin-top: 4px
    width: 100%
    // height: 60%
    overflow: visible
    background-color: TRACEPOINT_BACKGROUND_COLOR
    position: relative
    display: flex
    flex-direction: column
    border-radius: 6px

    .dt-scroll-body::-webkit-scrollbar-thumb
      border-color: TRACEPOINT_BACKGROUND_COLOR

    .editor-trace
      display: flex
      flex-direction: column
      color: TRACE_EXPAND_COLOR

      .editor-codeID
        height: 19px

      .editor-locals
        display: flex
        flex-direction: column

        .editor-local
          display: flex

          .editor-local-name
            flex-basis: 50%

          .editor-local-value
            flex-basis: 50%

  .chart-table
    background-color: TRACEPOINT_BACKGROUND_COLOR
    height: 100%
    display: flex
    flex-direction: column

  .monaco-editor .margin
    z-index: 1

.low-level-editor
  height: 100%
