  display: flex
  flex-direction: column

.dropdown-kind-container
  display: flex
  flex-direction: column

.dropdown-list-kind
  display: flex

.paging-menu
  display: flex

  .paging-page
    background-color: blue
    color: white
    cursor: pointer
    margin-left: 2px
    margin-right: 2px

  .paging-active-page
