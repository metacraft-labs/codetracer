{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@lib/*": ["./lib/*"],
      "@page-objects/*": ["./page-objects/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "lib/**/*.ts",
    "page-objects/**/*.ts",
    "tests/**/*.ts",
    "playwright.config.ts"
  ],
  "exclude": ["**/*.mjs", "node_modules"]
}
